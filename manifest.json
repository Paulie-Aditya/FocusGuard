{
  "manifest_version": 3,
  "name": "FocusGuard",
  "version": "1.0",
  "description": "Productivity tool with URL management and Pomodoro timer",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["alarm.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}

